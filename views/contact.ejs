<!-- Contact Hero -->
<section class="contact-hero">
    <div class="container">
        <h1 class="page-title">Contacto</h1>
        <p class="lead">
            ¿Tienes un proyecto en mente? Me encantaría escuchar sobre él. 
            ¡Trabajemos juntos para hacerlo realidad!
        </p>
    </div>
</section>

<!-- Contact Content -->
<section class="contact-content">
    <div class="container">
        <div class="contact-grid">
            <!-- Contact Form -->
            <div class="contact-form-section">
                <h2>Enviar Mensaje</h2>
                <form class="contact-form" id="contactForm">
                    <div class="form-group">
                        <label for="name">Nombre *</label>
                        <input type="text" id="name" name="name" required>
                    </div>
                    <div class="form-group">
                        <label for="email">Email *</label>
                        <input type="email" id="email" name="email" required>
                    </div>
                    <div class="form-group">
                        <label for="subject">Asunto *</label>
                        <input type="text" id="subject" name="subject" required>
                    </div>
                    <div class="form-group">
                        <label for="message">Mensaje *</label>
                        <textarea id="message" name="message" rows="6" required></textarea>
                    </div>
                    <button type="submit" class="btn btn-primary">
                        <i class="fas fa-paper-plane"></i> Enviar Mensaje
                    </button>
                </form>
            </div>

            <!-- Contact Info -->
            <div class="contact-info-section">
                <h2>Información de Contacto</h2>
                <div class="contact-info">
                    <div class="contact-item">
                        <div class="contact-icon">
                            <i class="fas fa-envelope"></i>
                        </div>
                        <div class="contact-details">
                            <h3>Email</h3>
                            <p>tu.email@ejemplo.com</p>
                        </div>
                    </div>
                    <div class="contact-item">
                        <div class="contact-icon">
                            <i class="fas fa-phone"></i>
                        </div>
                        <div class="contact-details">
                            <h3>Teléfono</h3>
                            <p>+1 (555) 123-4567</p>
                        </div>
                    </div>
                    <div class="contact-item">
                        <div class="contact-icon">
                            <i class="fas fa-map-marker-alt"></i>
                        </div>
                        <div class="contact-details">
                            <h3>Ubicación</h3>
                            <p>Ciudad, País</p>
                        </div>
                    </div>
                </div>

                <!-- Social Links -->
                <div class="contact-social">
                    <h3>Sígueme en</h3>
                    <div class="social-links">
                        <a href="#" class="social-link">
                            <i class="fab fa-github"></i>
                            <span>GitHub</span>
                        </a>
                        <a href="#" class="social-link">
                            <i class="fab fa-linkedin"></i>
                            <span>LinkedIn</span>
                        </a>
                        <a href="#" class="social-link">
                            <i class="fab fa-twitter"></i>
                            <span>Twitter</span>
                        </a>
                        <a href="#" class="social-link">
                            <i class="fab fa-instagram"></i>
                            <span>Instagram</span>
                        </a>
                    </div>
                </div>

                <!-- Availability -->
                <div class="availability">
                    <h3>Disponibilidad</h3>
                    <p>
                        <i class="fas fa-clock"></i>
                        Actualmente disponible para proyectos freelance
                    </p>
                    <p>
                        <i class="fas fa-calendar"></i>
                        Tiempo de respuesta: 24-48 horas
                    </p>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Map Section (Optional) -->
<section class="map-section">
    <div class="container">
        <h2 class="section-title">Mi Ubicación</h2>
        <div class="map-placeholder">
            <i class="fas fa-map-marked-alt"></i>
            <p>Mapa interactivo de tu ubicación</p>
            <small>Puedes integrar Google Maps aquí</small>
        </div>
    </div>
</section>
